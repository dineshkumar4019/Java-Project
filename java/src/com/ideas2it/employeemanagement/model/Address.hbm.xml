<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
"-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
"http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">

<hibernate-mapping>
    <class name="com.ideas2it.employeemanagement.model.Address" table = "employees_address">
    
        <meta attribute="Class-description">
            This class Holds the address of an employee.
        </meta>  
    
        <id name="id" column="id" type="int">
            <generator class="increment"/>
        </id>
    
        <property name="address" column="address"  type="String"
                  not-null="true" lazy="true"/> 
        <property name="city" column="city" type="String"
                  not-null="true" lazy="true"/> 
        <property name="pincode" column="pincode" type="String"
                  not-null="true" lazy="true"/> 
        <property name="state" column="state" type="long"
                  not-null="true" lazy="true"/> 
        <property name="country" column="country" type="java.sql.Date"
                  not-null="true" lazy="true"/> 
    
    </class>
</hibernate-mapping>
