<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    
    <Appenders>
        <File name="File" fileName="logs/EMSLogs.log">
            <PatternLayout pattern="%date [%thread][%level][%c]:%message%n "/>
        </File>
    </Appenders>
    
    <Loggers>
        <Logger name="org.hibernate" level="info">
            <AppenderRef ref="File"/>
        </Logger>
        
        <Logger name="com.ideas2it.employeemanagement.logger.EMSLogger" level="info">
            <AppenderRef ref="File"/>
        </Logger>
        
        <Root level="info">
          <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>
    
