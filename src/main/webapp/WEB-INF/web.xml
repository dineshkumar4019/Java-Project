<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee"
xmlns:web="https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee/ https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
version="5.0">
	<display-name>EmployeeManagement</display-name>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>com.ideas2it.employeemanagement.controller.EmployeeController</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/createAddress</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/viewEmployee</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/deleteAll</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/employeeCreateForm</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/employeeUpdateForm</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/updateAddress</url-pattern>
    </servlet-mapping>
    
     <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/assign</url-pattern>
    </servlet-mapping>
    
<servlet>
    <servlet-name>ProjectControllerServlet</servlet-name>
    <servlet-class>com.ideas2it.employeemanagement.controller.ProjectController</servlet-class>
</servlet>
 
    <servlet-mapping>
        <servlet-name>ProjectControllerServlet</servlet-name>
        <url-pattern>/ProjectCreateForm</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProjectControllerServlet</servlet-name>
        <url-pattern>/createProject</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProjectControllerServlet</servlet-name>
        <url-pattern>/viewProject</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProjectControllerServlet</servlet-name>
        <url-pattern>/projectUpdateForm</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProjectControllerServlet</servlet-name>
        <url-pattern>/updateProject</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProjectControllerServlet</servlet-name>
        <url-pattern>/deleteProject</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ProjectControllerServlet</servlet-name>
        <url-pattern>/deleteAllProject</url-pattern>
    </servlet-mapping>
    
</web-app>