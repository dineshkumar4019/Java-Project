<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    
   <mvc:annotation-driven />
   <context:component-scan base-package="com.ideas2it.employeemanagement"/>
	
  
	
   <bean id = "employeeController" class = "com.ideas2it.employeemanagement.controller.EmployeeController">
      <constructor-arg ref = "employeeService"/>
   </bean>
   
   <bean id = "employeeService" class = "com.ideas2it.employeemanagement.service.impl.EmployeeService">
      <constructor-arg ref = "employeeDao"/>
      <property name = "projectService" ref = "projectService"/>
   </bean>
   <bean id = "employeeDao" class = "com.ideas2it.employeemanagement.dao.impl.EmployeeDao"/>
   
   <bean id = "projectController" class = "com.ideas2it.employeemanagement.controller.ProjectController">
      <constructor-arg ref = "projectService"/>
   </bean>
   
   <bean id = "projectService" class = "com.ideas2it.employeemanagement.service.impl.ProjectService">
      <constructor-arg ref = "projectDao"/>
      <property name = "employeeService" ref = "employeeService"/>
   </bean>
   <bean id = "projectDao" class = "com.ideas2it.employeemanagement.dao.impl.ProjectDao"/>
   <mvc:resources location="/" mapping="/EmployeeStylePage.css"></mvc:resources>
   </beans>